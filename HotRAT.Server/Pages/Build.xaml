<Page x:Class="HotRAT.Server.Pages.Build"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HotRAT.Server.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Build">

    <Grid>
        <TextBox x:Name="ip" HorizontalAlignment="Left" Height="35" Margin="40,40,0,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Width="215" Background="#0FFFFFFF" MinWidth="215"/>
        <TextBox x:Name="port" HorizontalAlignment="Left" Height="35" Margin="108,90,0,0" TextWrapping="Wrap" Text="2026" VerticalAlignment="Top" Width="70" MinWidth="80"/>
        <Button x:Name="build" Content="Build" Height="30" Margin="58,140,0,0" Width="180" Click="build_Click" VerticalAlignment="Top"/>

        <ScrollViewer x:Name="scrollViewer" VerticalScrollBarVisibility="Auto" Margin="275,0,0,0">
            <TextBlock x:Name="build_log" TextWrapping="WrapWithOverflow"/>
        </ScrollViewer>
    </Grid>
</Page>
